<h1>Shifts</h1>
<br>
<style>
  table {
      border-collapse: collapse;
      width: 100%;
  }

  th, td {
      text-align: center;
      padding: 3px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
      background-color: #4CAF50;
      color: white;
  }
</style>
<table>
  <tr>
    <th>Shift#</th>
    <th>Sunday</th>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
  </tr>
  <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.shift_number %></td>
      <td><%= Sunday.find([:shift :shift_id]).start_time %></td>
      <td><%#= employee.seniority.strftime("%m-%d-%Y") %></td>
      <td><%#= employee.bid_time.strftime("%b %d %H:%M") %></td>
    </tr>
  <% end %>
</table>
