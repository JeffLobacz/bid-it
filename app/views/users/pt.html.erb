<h2><u><%= link_to "Bid Times", users_path %></u> > Part-Time <%= link_to "Add user", new_user_path, class: 'btn btn-success' %></h2>
<br>
<style>
  table {
      border-collapse: collapse;
      width: 100%;
  }

  th, td {
      text-align: center;
      padding: 3px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
      background-color: #4CAF50;
      color: white;
  }
</style>
<table>
  <tr>
    <th>Bid#</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Empl.#</th>
    <th>Occ. User</th>
    <th>Qual.</th>
    <th>Bid Time</th>
    <th>Shift#</th>
  </tr>
  <% @users.sort_by_seniority.each do |user| %>
    <tr>
      <% if user.employment_status == "PT" %>
        <td><%= user.bid_number %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.employee_number %></td>
        <td><%= user.seniority.strftime("%m-%d-%Y") %></td>
        <% if user.qualification || "select" %>
          <td><%= user.qualification %></td>
        <% end %>
        <td><%#= user.bid_time.strftime("%b %d %H:%M") %></td>
        <td><%= user.shift_id %></td>
      <% end %>
    </tr>
  <% end %>
</table>
