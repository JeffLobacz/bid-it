<div class="row">
  <p>
  <div class="col-md-5">
    <h4><u><i><%= link_to "Bid Times", users_path %></i></u> > <b>Crew-Chiefs</b></h4>
  </div>
  <div class="col-md-5">
    <div class="center">
      <%= link_to "Bid Sheet", shifts_cc_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="right">
      <%= link_to "Add Employee", new_user_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>


<br>
<style>
  table {
      border-collapse: collapse;
      width: 100%;
  }

  th, td {
      text-align: center;
      padding: 3px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
      background-color: #4CAF50;
      color: white;
  }
</style>
<table>
  <tr>
    <!-- <th>Watch</th> -->
    <th>Bid#</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Empl.#</th>
    <th>Occ. User</th>
    <th>Qual.</th>
    <th>Bid Time</th>
    <th>Shift#</th>
  </tr>
  <% bid_number = 0 %>
  <% bid_begins = DateTime.new(2017,2,18,5) %>
  <% bidding_begins = bid_begins - 2.weeks %>
  <% current_bidder = nil %>
  <% @employees.sort_by_seniority.each do |employee| %>
    <tr>
      <% if employee.employment_status == "CC" %>
        <% bid_number += 1 %>
        <td><%= bid_number %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.seniority.strftime("%m-%d-%Y") %></td>
        <% if employee.qualification != nil && employee.qualification != "select"%>
          <td><%= employee.qualification %></td>
        <% else %>
          <td></td>
        <% end %>
        <% if bid_number == 1 %>
          <% bid_time = bidding_begins %>
        <% else %>
          <%# bid_time += 5.minutes %>
        <% end %>
        <td><%= bid_time %></td>
        <% if employee.shift != nil  %>
          <td><%= employee.shift %></td>
        <% else %>
            <% if bid_number - 1 != current_bidder %>
              <td><%= link_to "Bid", edit_user_path(id: employee.id), class: 'btn btn-success' %></td>
              <% current_bidder = bid_number %>
            <% else %>
              <td>--</td> 
          <% end %>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
