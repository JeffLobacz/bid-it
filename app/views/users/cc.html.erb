<div class="row">
  <p>
  <div class="col-md-5">
    <h4><u><i><%= link_to "Bid Times", users_path %></i></u> > <b>Crew-Chiefs</b></h4>
  </div>
  <div class="col-md-5">
    <div class="center">
      <%= link_to "Bid Sheet", shifts_cc_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class="right">
      <%= link_to "Add Employee", new_user_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>


<br>
<style>
  table {
      border-collapse: collapse;
      width: 100%;
  }

  th, td {
      text-align: center;
      padding: 3px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
      background-color: #4CAF50;
      color: white;
  }
</style>
<table>
  <tr>
    <!-- <th>Watch</th> -->
    <th>Bid#</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Empl.#</th>
    <th>Occ. User</th>
    <th>Qual.</th>
    <th>Bid Time</th>
    <th>Shift#</th>
  </tr>
  <% @employees.sort_by_seniority.each do |employee| %>
    <tr>
      <% if employee.employment_status == "CC" %>
        <!-- <td><%#= employee.bid_number %></td> -->
        <td><%= employee.bid_number %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.seniority.strftime("%m-%d-%Y") %></td>
        <% if employee.qualification != "select" %>
          <td><%= employee.qualification %></td>
        <% end %>
        <%# The following line is commented out for production env. error %>
        <td><%#= employee.bid_time.strftime("%b %d %H:%M") %></td>
        <% if employee.shift == nil  %>
          <%# @bidder = employee %>
          <td><%= link_to "Bid", users_bid_path(id: employee.id), class: 'btn btn-success' %></td>
        <% else %>
          <td><%= employee.shift %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
