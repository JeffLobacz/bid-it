<%= form_for @workarea do |f| %>
  <p>
  <%= f.text_field :title, class: 'form-control', placeholder: "Workarea name" %>
  <p>
  <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Workarea description" %>
  <p>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
