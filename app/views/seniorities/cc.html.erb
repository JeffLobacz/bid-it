<div class="row">
  <div class="col-md-6">
    <h3><u><%= link_to "Crew Chiefs", seniorities_cc_path %></u>  <u><%= link_to "Full-Time", seniorities_ft_path %></u>  <u><%= link_to "Part-Time", seniorities_pt_path %></u></h3>
  </div>
</div>
<p>
<u><h2>Crew-Chiefs</h2></u>
<br>
<style>
  table {
      border-collapse: collapse;
      width: 50%;
  }

  th, td {
      text-align: left;
      padding: 1px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
      background-color: #4CAF50;
      color: white;
  }
</style>
<table>
  <tr>
    <th>Bid #</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Occ. Sen.</th>
    <th>Shift #</th>
  </tr>
  <% @employee.sort_by_bid_number.each do |employee| %>
    <tr>
      <% if employee.employment_status == "CC" %>
        <td><%= employee.bid_number %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.seniority.strftime("%m-%d-%Y") %></td>
        <td><%= employee.shift %></td>
      <% end %>
    </tr>
  <% end %>
</table>
